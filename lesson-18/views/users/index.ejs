<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5">
      <h1>Users Table</h1>
      <p>Here are all the users on our site.</p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => {%>
            <tr>

              <td><%= user.fullName %></td> <!-- 사용자의 fullName 출력 -->
              <td><%= user.email %></td> <!-- 사용자의 email 출력 -->
              <td><%= user.phoneNumber %></td>
              <td><%= user.password %></td> <!-- 사용자의 password 출력 -->
            </tr>
            <%});%>
        </tbody>
      </table>

      <!-- <div class="mt-5 text-center">
        <a href="/" class="btn ut-red">Delete All Users</a>
      </div> -->
    </div>
  </div>
</main>
